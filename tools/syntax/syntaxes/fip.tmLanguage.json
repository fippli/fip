{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FIP",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#objects"
    },
    {
      "include": "#lists"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fip",
          "begin": "//",
          "end": "$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "meta.embedded.expression.fip",
              "match": "<([a-zA-Z_][a-zA-Z0-9_-]*)>",
              "captures": {
                "1": {
                  "name": "variable.other.fip"
                }
              }
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fip",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "constant.language.null.fip",
          "match": "\\bnull\\b"
        },
        {
          "name": "constant.language.boolean.fip",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.fip",
          "match": ":"
        },
        {
          "name": "keyword.operator.arithmetic.fip",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.logical.fip",
          "match": "[&|]"
        },
        {
          "name": "keyword.operator.comparison.fip",
          "match": "="
        },
        {
          "name": "keyword.operator.access.fip",
          "match": "\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.fip",
          "begin": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)(!|\\?)?\\s*:\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.fip"
            },
            "2": {
              "name": "keyword.operator.function-notation.fip"
            }
          },
          "patterns": [
            {
              "include": "#function-parameters"
            }
          ]
        },
        {
          "name": "entity.name.function.impure.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\!(?=\\s*\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.fip"
            }
          }
        },
        {
          "name": "entity.name.function.predicate.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\?(?=\\s*\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.fip"
            }
          }
        },
        {
          "name": "entity.name.function.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)(?=\\s*\\()"
        },
        {
          "name": "meta.function.anonymous.fip",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "#function-parameters"
            },
            {
              "include": "#function-body"
            }
          ]
        },
        {
          "name": "meta.function.body.fip",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "name": "variable.parameter.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\b"
        }
      ]
    },
    "function-body": {
      "patterns": [
        {
          "include": "$self"
        }
      ]
    },
    "objects": {
      "patterns": [
        {
          "name": "meta.structure.dictionary.fip",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "meta.mapping.key.fip",
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\s*:",
              "captures": {
                "1": {
                  "name": "entity.name.tag.fip"
                }
              }
            },
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "lists": {
      "patterns": [
        {
          "name": "meta.structure.list.fip",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.readwrite.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\s*:(?!\\s*\\()",
          "captures": {
            "1": {
              "name": "variable.other.fip"
            }
          }
        },
        {
          "name": "variable.other.property.fip",
          "match": "\\.([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": {
              "name": "variable.other.fip"
            }
          }
        },
        {
          "name": "variable.other.fip",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_-]*)\\b"
        }
      ]
    }
  },
  "scopeName": "source.fip"
}
